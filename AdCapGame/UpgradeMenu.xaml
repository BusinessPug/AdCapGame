<Window x:Class="AdCapGame.UpgradeMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Upgrade Menu" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Window.Resources>
    
    <Window.Background>
        <ImageBrush ImageSource="Assets/UpMenu.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="UpgradeListPanel" Orientation="Vertical" Background="#80000000">
            <!-- Dynamic content will be added here -->
        </StackPanel>
    </ScrollViewer>
</Window>
