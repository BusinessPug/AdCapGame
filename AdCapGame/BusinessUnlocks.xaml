<Window x:Class="AdCapGame.BusinessUnlocks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdCapGame"
        mc:Ignorable="d"
        Title="BusinessUnlocks" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        RenderOptions.BitmapScalingMode="Fant"
        Icon="Assets/AdCapIcon.ico">

    <Window.Background>
        <ImageBrush ImageSource="/Assets/BusinessUnlocks.jpg" Stretch="UniformToFill" x:Name="BackgroundImage"/>
    </Window.Background>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="BusinessUnlocksPanel" Orientation="Vertical" Background="#80000000">
            <!-- Dynamic content will be added here -->
        </StackPanel>
    </ScrollViewer>

</Window>
